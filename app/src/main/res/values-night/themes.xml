<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDev" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- <item name="colorPrimary">#BFBFBF</item> Discord's dark mode background color -->
        <item name="colorPrimaryVariant">#2F3136</item> <!-- Darker shade for toolbar and status bar -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text on dark background -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7289DA</item> <!-- Discord's accent color -->
        <item name="colorSecondaryVariant">#5F73B6</item> <!-- Darker shade for secondary actions -->

        <!-- Text and icon colors -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Primary text color -->
        <item name="android:textColorSecondary">#99AAB5</item> <!-- Secondary text color -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color (optional, for devices with on-screen navigation buttons) -->
        <item name="android:navigationBarColor">#2F3136</item> <!-- Discord's dark mode background color -->

        <!-- Customize your theme here. -->

        <!-- Remove action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item> <!-- Set text color to black -->
        <item name="android:background">@drawable/button_background</item> <!-- Set button background color -->
        <item name="backgroundTint">#3C3C3C</item> <!-- Set button background color -->
    </style>
    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/black</item>
    </style>



</resources>